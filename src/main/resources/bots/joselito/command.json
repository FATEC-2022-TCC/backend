{
  "description": "A command chatbot machine json example",
  "variables": {
    "name": "desconhecido",
    "bot": "Joselito"
  },
  "categories": [
    {
      "pattern": "voce pode lembrar meu nome ?",
      "template": "Sim, eu posso!!!"
    },
    {
      "pattern": "meu nome e *",
      "template": "Nome legal, {{ star:0 }}. Eu vou me lembrar dele.",
      "commands": [
        "{{ name={{ star:0 }} }}"
      ]
    },
    {
      "pattern": "qual e o meu nome ?",
      "template": "Seu nome é {{ name }}"
    },
    {
      "pattern": "qual e o seu nome ?",
      "template": "Meu nome é {{ bot }}"
    },
    {
      "pattern": "seu nome vai ser *",
      "template": "Legal, {{ star:0 }} é um nome legal. Obrigado !!!",
      "commands": [
        "{{ bot={{ star:0 }} }}"
      ]
    }
  ]
}